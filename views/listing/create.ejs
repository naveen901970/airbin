 <% layout("/layouts/boilerplate.ejs") %>
<body>
    <h1>Create a new listing</h1>
    <form action="/listings" method="post">
        <div class="row mt-3">
            <div class="col-8  offset-2">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                <input type="text"
                 name="listing[title]" 
                placeholder="enter title"
                class="form-control"
                />
                </div >
               
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea type="text" name="listing[description]"
                 class="form-control"></textarea>
                </div>
                

                <div class="mb-3">
                    <label for="image" class="form-label">Image</label>
                    <input type="text" name="listing[image]" placeholder="enter your image url/link" class="form-control">
                </div>
                
               <div class="row">
                <div class="mb-3 col-md-4">
                    <label for="price" class="form-label">Price</label>
                    <input type="number" 
                    name="listing[price]" 
                    placeholder="enter a price"
                     class="form-control">
                </div>
                <div class="mb-3  col-md-8">
                   <label for="country" class="form-label">Country</label>
                   <input type="text"name="listing[country]" placeholder="india" class="form-control" >
                </div>
               </div>
                
                
                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input type="text" name="listing[location]"  placeholder="siruguapp,ballary" class="form-control" >
                </div>
               
                
                <button class="btn btn-dark mt-3" style="background-color: #fe424d ; border: none !important;">add</button>
        
            </form>
            </div>
        </div>
        <br>
        
  
</body>



