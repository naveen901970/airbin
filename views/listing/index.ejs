<% layout("./layouts/boilerplate.ejs") %>
<body>
    <h1>all listings</h1>
          <!-- <form action="/listings/new" method="get">
            <button>create a new list</button>
          </form> -->
    <div class="row row-cols-lg-3  row-cols-md-3 row-cols-sm-1">
        <% for( listing of newlist ) { %>
        <div class="card col" style="width: 20rem;">
            <img src="<%= listing.image %>" class="card-img-top" alt="listing_image">
            <div class="card-body">
              <p class="card-text">
                <%= listing.title %> <br>
                &#8377;<%=listing.price.toLocaleString("en-IN") %>/night
              </p>
            </div>
          </div>
          <% } %>
        </div>   
       

</body>
